{
    "name": "nimb",
    "version": "1.0.1",
    "description": "NIMB - from gooners, to gooners",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win portable"
    },
    "author": "Noobcoder191",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "axios": "^1.13.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2"
    },
    "build": {
        "appId": "com.nimb.proxy",
        "productName": "NIMB",
        "win": {
            "target": "portable",
            "icon": "assets/icon.png"
        },
        "files": [
            "**/*",
            "!node_modules/.cache"
        ],
        "extraResources": [
            {
                "from": "../cloudflared.exe",
                "to": "cloudflared.exe"
            }
        ]
    }
}